module ListBoxItem = struct
  external make :
       children:React.element
    -> ?id:string
    -> ?className:string
    -> ?href:string
    -> React.element = "ListBoxItem"
  [@@react.component] [@@mel.module "react-aria-components"]
end
[@@platform js]

module ListBoxItem = struct
  let make ~children ?key:_key ?id ?className ?href:_href () =
    <li ?id ?className>children</li>
end
