module Select = struct
  external make :
       children:React.element
    -> ?className:string
    -> ?name:string
    -> ?value:string
    -> ?defaultValue:string
    -> ?onChange:(string -> unit)
    -> React.element = "Select"
  [@@mel.module "react-aria-components"] [@@react.component]
end
[@@platform js]

module Select = struct
  let make ~children ?className ?name ?value ?defaultValue ?onChange () =
    <select ?className ?name ?value ?defaultValue ?onChange>children</select>
end
[@@platform native]

module SelectValue = struct
  external make : ?children:React.element -> ?className:string -> React.element
    = "SelectValue"
  [@@mel.module "react-aria-components"] [@@react.component]
end
[@@platform js]

module SelectValue = struct
  let make ?children ?className () =
    <span ?className>(Option.value children ~default:React.null)</span>
end
[@@platform native]
